-- Spinning Wheel GUI – LEVÝ DOLNÍ ROH
-- Nekonečné, plynulé točení bez Tween goalů (RunService Heartbeat)
-- Klik → print("HELLO WORLD")

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local PlayerGui = Players.LocalPlayer:WaitForChild("PlayerGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SpinningWheelGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

-- Hlavní kruhový frame
local mainFrame = Instance.new("Frame")
mainFrame.Name = "WheelFrame"
mainFrame.Size = UDim2.new(0, 280, 0, 280)
mainFrame.Position = UDim2.new(0, 20, 1, -300) -- levý dolní roh
mainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 20)
mainFrame.BackgroundTransparency = 0.3
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(1, 0)
uiCorner.Parent = mainFrame

local uiStroke = Instance.new("UIStroke")
uiStroke.Color = Color3.fromRGB(180, 180, 255)
uiStroke.Thickness = 2.5
uiStroke.Transparency = 0.5
uiStroke.Parent = mainFrame

-- Image (točící se část)
local imageLabel = Instance.new("ImageLabel")
imageLabel.Name = "WheelImage"
imageLabel.Size = UDim2.new(1, -24, 1, -24)
imageLabel.Position = UDim2.new(0.5, 0, 0.5, 0)
imageLabel.AnchorPoint = Vector2.new(0.5, 0.5)
imageLabel.BackgroundTransparency = 1
imageLabel.Image = "rbxassetid://76258847097593"   -- ← TVÉ ID
imageLabel.Parent = mainFrame

-- Fallback + kontrola
local fallbackId = "rbxassetid://6031075938"

imageLabel.Loaded:Connect(function()
    print("Obrázek načten")
end)

imageLabel:GetPropertyChangedSignal("ImageRectSize"):Connect(function()
    if imageLabel.ImageRectSize.Magnitude < 1 then
        warn("Špatné ID → fallback")
        imageLabel.Image = fallbackId
    end
end)

task.delay(6, function()
    if imageLabel.ImageRectSize.Magnitude < 1 then
        imageLabel.Image = fallbackId
    end
end)

-- ───────────────────────────────────────────────
--   NEKONEČNÉ, PLYNULÉ TOČENÍ (bez Tween cíle)
-- ───────────────────────────────────────────────
local rotationSpeed = 30     -- stupňů za sekundu (30 = 12 sekund na celou otáčku)
-- Chceš pomalejší? → sniž na 20 / 15 / 10 ...

local connection

connection = RunService.Heartbeat:Connect(function(deltaTime)
    -- deltaTime = čas od posledního snímku (v sekundách)
    local addRotation = rotationSpeed * deltaTime
    imageLabel.Rotation = (imageLabel.Rotation + addRotation) % 360
end)

-- Volitelně: kdyby ses chtěl později zastavit (např. při odchodu z hry)
-- game:BindToClose(function()
--     if connection then connection:Disconnect() end
-- end)

-- Kliknutí
imageLabel.InputBegan:Connect(function(input, processed)
    if processed then return end
    if input.UserInputType == Enum.UserInputType.MouseButton1 
    or input.UserInputType == Enum.UserInputType.Touch then
        print("HELLO WORLD")
        -- můžeš sem dát třeba imageLabel.ImageColor3 = Color3.new(1,0.3,0.3) apod.
    end
end)

print("Nekonečné plynulé točení – RunService Heartbeat")
print("Rychlost: " .. rotationSpeed .. "°/s  → jedna otáčka za " .. (360/rotationSpeed) .. " sekund")
