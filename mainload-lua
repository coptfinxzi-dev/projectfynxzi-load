-- Spinning Wheel GUI Script - LEV√ù DOLN√ç ROH
-- Vytvo≈ô√≠ se rotuj√≠c√≠ koleƒçko s image ID, kliknut√≠ udƒõl√° print("HELLO WORLD")
-- Rotace pomalu a plynule
-- OPRAVENO: P≈ôid√°na kontrola naƒçten√≠ obr√°zku + fallback

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local PlayerGui = Players.LocalPlayer:WaitForChild("PlayerGui")

-- Vytvo≈ô ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SpinningWheelGui"
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

-- Hlavn√≠ Frame (kruhov√Ω) - LEV√ù DOLN√ç ROH
local mainFrame = Instance.new("Frame")
mainFrame.Name = "WheelFrame"
mainFrame.Size = UDim2.new(0, 300, 0, 300)
mainFrame.Position = UDim2.new(0, 20, 1, -320) -- LEV√ù DOLN√ç ROH (20px od okraje)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
mainFrame.BackgroundTransparency = 0.2
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- UICorner pro kruhov√Ω tvar
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(1, 0)
uiCorner.Parent = mainFrame

-- UIStroke pro okraj
local uiStroke = Instance.new("UIStroke")
uiStroke.Color = Color3.fromRGB(255, 255, 255)
uiStroke.Thickness = 3
uiStroke.Parent = mainFrame

-- ImageLabel s tvou image
local imageLabel = Instance.new("ImageLabel")
imageLabel.Name = "WheelImage"
imageLabel.Size = UDim2.new(1, 0, 1, 0)
imageLabel.Position = UDim2.new(0, 0, 0, 0)
imageLabel.BackgroundTransparency = 1
imageLabel.Image = "rbxassetid://76258847097593" -- ‚Üê SEM VLO≈Ω SVOJE DLUH√â ID (nap≈ô. 17654839217465938)
imageLabel.ImageTransparency = 0
imageLabel.Parent = mainFrame

-- AnchorPoint pro spr√°vnou rotaci
imageLabel.AnchorPoint = Vector2.new(0.5, 0.5)
imageLabel.Position = UDim2.new(0.5, 0, 0.5, 0)

-- Fallback obr√°zek pro test (pokud se tv≈Øj nenaƒçte)
local fallbackId = "rbxassetid://6031075938" -- Defaultn√≠ Roblox loading icon (funguje v≈ædy)

-- Kontrola naƒçten√≠ obr√°zku
imageLabel.Loaded:Connect(function()
    print("‚úÖ Obr√°zek se √∫spƒõ≈°nƒõ naƒçetl!")
end)

imageLabel:GetPropertyChangedSignal("ImageRectSize"):Connect(function()
    if imageLabel.ImageRectSize.Magnitude == 0 then
        warn("‚ö†Ô∏è Obr√°zek se nenaƒçetl ‚Äì ≈°patn√© ID? Pou≈æ√≠v√°m fallback.")
        imageLabel.Image = fallbackId
    end
end)

-- Timeout kontrola (pokud se nenaƒçte do 5s)
task.wait(0.1) -- Mal√© zpo≈ædƒõn√≠
task.delay(5, function()
    if imageLabel.ImageRectSize.Magnitude == 0 then
        warn("‚è∞ Timeout: Pou≈æ√≠v√°m fallback obr√°zek.")
        imageLabel.Image = fallbackId
    end
end)

-- Funkce pro nekoneƒçnou pomalou rotaci
local function startSpinning()
    local spinInfo = TweenInfo.new(
        6, -- Doba jedn√© ot√°ƒçky (6 sekund - pomalu)
        Enum.EasingStyle.Linear,
        Enum.EasingDirection.InOut,
        -1, -- Nekoneƒçno repeats
        false,
        0
    )
   
    local spinGoal = {Rotation = 360}
    local spinTween = TweenService:Create(imageLabel, spinInfo, spinGoal)
    spinTween:Play()
end

-- Kliknut√≠ - MouseButton1Click
imageLabel.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        print("HELLO WORLD")
    end
end)

-- Spus≈• rotaci
startSpinning()

print("üöÄ Spinning wheel v LEV√âM DOLN√çM ROHU! Nahraƒè ID a spus≈•.")
print("Pokud se obr√°zek nenaƒçte, skript pou≈æije fallback automaticky.")
